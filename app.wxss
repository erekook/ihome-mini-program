@import 'font-awsome.wxss';
@import 'weui.wxss';

page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  /* background-color: #E76055; */
}

/* 左右布局 */
.div-item {
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #e6e6e6;
}

.fl {
  float: left;
}

.fa {
  float: right;
}

.div-item-left {
  width: 50%;
  float: left;
}

.div-item-right {
  width: 50%;
  float: right;
}

.btn-submit {
  background-color: #E76055;
  color: #fff;
}

.btn {
  padding: 0;
  margin: 0;
}

.btn-cancel {
  background-color: #BFBFBF;
  color: #fff;
}

/*垂直水平居中*/
.vh-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/*水平居中*/
.h-center {
  display: flex;
  justify-content: center;
}

/*垂直居中*/
.v-center {
  display: flex;
  align-items: center;
}
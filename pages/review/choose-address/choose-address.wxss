/* pages/login/choose-address/choose-address.wxss */

.div-item {
  height: 56px;
  display: flex;
  align-items: center;
}

.div-item-right text {
  color: #999;
  float: right;
  line-height: 32px;
}

.btn {
  width: 136px;
  height: 44px;
}

.popup {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 99;
  top: 0;
}

.popup .choose-menu {
  width: 100%;
  height: 41px;
  background-color: #e6e6e6;
  display: flex;
  justify-content: space-between;
}

.popup .menu {
  width: calc(100% / 4);
  font-size: 17px;
}

.popup .choose-title{
  width: 100%;
  height: 50px;
  font-size: 13px;
  color: #999;
  margin-bottom: 12px;
}

.popup .choose-list {
  width: 100%;
  height: 31px;
  font-size: 14px;
  margin: 0 0 11px 16px;
}

.popup .choose-border {
  position: absolute;
  top: 141px;
  z-index: 10;
  width: 100%;
  height: 1px;
  display: flex;
  justify-content: space-around;
}

.popup .choose-border-item {
  width: 15%;
  height: 1px;
  /*background-color: #E76055;*/
}